# ======================================================================
# Generic Rules 
# ======================================================================
DIST=@DIST@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@ @LIBS@
VERSION=@VERSION@
PACKAGE=@PACKAGE@
HG_URL=@HG_URL@
SO=@SO@


%.@SO@ : %.o
	@LOAD@ $*.@SO@  $(LDFLAGS) $<

%.o: %.c
	@COMP@ $(CFLAGS) -c $<

%.ostk: %.stk
	stklos-compile -c -o $*.ostk $<

%.ostk: %.scm
	stklos-compile -c -o $*.ostk $<

%.ospi: %.scm
	stklos-compile -c -o $*.ostk$<

all: objs copy

clean:  clean-specific
	rm -rf *~ $(SOBJ) $(OBJ) $(OSTK)

install: 

distclean: clean
	rm -rf autom4te.cache config.* Makefile stklos-gtk-canvas.stk

version: distclean

copy: 
	cp -a $(PACKAGE).$(SO) ../..

dist: version

doc: 
	(cd doc; $(MAKE))

# ======================================================================
# Specific Rules 
# ======================================================================
SOBJ = $(PACKAGE).@SO@
OBJ  = $(PACKAGE).o
OSTK = 

objs: $(SOBJ) $(OSTK)

$(PACKAGE).o: $(PACKAGE)-inc.c $(PACKAGE).c

$(PACKAGE)-inc.c: $(PACKAGE).spi $(PACKAGE).stk
	stklos-compile -c -C -o $(PACKAGE)-inc.c $(PACKAGE).spi

clean-specific:
	rm -f $(PACKAGE)-inc.c
